@model Dal.Customer


    <style>
        p {
            font-size: 22px; /* حجم النص العام */
            word-wrap: break-word; /* يكسر الكلمات الطويلة */
            white-space: normal; /* يسمح بكسر الأسطر */
        }

        strong {
            font-size: 23px; /* حجم الخط في النصوص الغامقة */
        }
    </style>
<p><strong>Name:</strong> @Model.Name</p>
<p><strong>Phone:</strong> @Model.Phone</p>
<p><strong>Email:</strong> @Model.Email</p>
<p><strong>Address:</strong> @Model.Address</p>
<p><strong>Message:</strong> @Model.Message_or_inquiry</p>


