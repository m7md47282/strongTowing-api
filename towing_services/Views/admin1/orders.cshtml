        function loadDrivers(orderId) {
        $.ajax({
            url: '/admin1/AssignDriver', // استبدلها بمسار الـ API الخاص بك
            type: 'GET',
            data: { orderId: orderId },
            success: function (data) {
                $('#driverList').html(data); // تحميل البيانات داخل المودال
            },
            error: function () {
                $('#driverList').html('<p class="text-danger">Error loading drivers.</p>');
            }
        });
    }

    // عند إغلاق المودال، قم بإعادة تعيين محتواه (اختياري)
    $('#assignDriverModal').on('hidden.bs.modal', function () {
        $('#driverList').html(''); // إفراغ محتوى المودال
    });

    $(document).ready(function () {
        // فتح المودال لإدخال ETA
        window.openETAModal = function (orderId, currentETA) {
            $('#modal_orderId').val(orderId); // تعبئة OrderId
            $('#modal_eta_input').val(currentETA); // تعبئة ETA الحالية
            $('#etaModal').modal('show'); // عرض المودل
        }

        // عند النقر على زر الحفظ
        $('#save_eta_btn').click(function () {
            var orderId = $('#modal_orderId').val();
            var eta = $('#modal_eta_input').val();

            // إرسال البيانات إلى الخادم باستخدام AJAX
            $.ajax({
                url: '/admin1/SaveETA', // URL الخاص بعملية الحفظ
                type: 'POST',
                data: { orderId: orderId, eta: eta },
                success: function (response) {
                    if (response.success) {
                        // تحديث القيمة في الجدول
                        $('#eta_display_' + orderId).text(response.eta);

                        // إظهار زر "Assign Driver" بعد إدخال ETA بنجاح
                        $('#assignDriverButton_' + orderId).show(); // إظهار الزر

                        // إغلاق المودل بعد حفظ البيانات
                        $('#etaModal').modal('hide');
                    } else {
                        alert('Failed to save ETA.');
                    }
                },
                error: function () {
                    alert('Error occurred while saving ETA.');
                }
            });
        });

        // عند النقر على زر الإغلاق (X) في المودل
        $('.close').click(function () {
            $('#etaModal').modal('hide'); // إغلاق المودل
        });

        // التحقق إذا كان ETA موجودًا قبل فتح مودال اختيار السائق
        $('button[data-target="#assignDriverModal"]').click(function () {
            var orderId = $(this).data('order-id');
            var eta = $('#eta_display_' + orderId).text().trim(); // الحصول على نص ETA من الـ HTML

            // إذا كانت قيمة ETA فارغة أو "Not Set"، إخفاء الزر وطلب إدخال ETA
            if (!eta || eta === "Not Set") {
                // إخفاء الزر إذا لم يكن هناك ETA
