            <form asp-action="UpdateProfiledriver"  asp-route-id="@Model.DriverId" method="post" id="updateProfileForm">
                <input type="hidden" asp-for="@Model.DriverId" />

                <div class="form-group">
                    <label for="Name">Name</label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Email">Email</label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="PhoneNumber">Phone Number</label>
                    <input asp-for="@Model.phone" class="form-control" />
                    <span asp-validation-for="@Model.phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="VehicleType">Vehicle Type</label>
                    <select asp-for="@Model.VehicleType" class="form-control custom-select" id="VehicleType">
                        <option value="Flatbed">Flatbed</option>
                        <option value="Heavy Duty">Heavy Duty</option>
                    </select>
                </div>
                <div class="image-section d-flex flex-wrap justify-content-around gap-4">

                    <div class="image-box text-center">
                        <label>License Picture</label>
                        <div class="image-wrapper">
                            <img id="licensePictureImage" src="~/@Model.LicensePicture" alt="License Picture" />
                            <button type="button" class="btn btn-info change-picture" data-target="#licensePictureModal" data-toggle="modal">
                                <i class="fas fa-camera"></i>
                            </button>
                        </div>
                    </div>

                    <div class="image-box text-center">
                        <label>Work Permit </label>
                        <div class="image-wrapper">
                            <img id="wPictureImage" src="~/@Model.workPermitPicture" alt="Work Permit Picture" />
                            <button type="button" class="btn btn-info change-picture" data-target="#workPermitModal" data-toggle="modal">
                                <i class="fas fa-camera"></i>
                            </button>
                        </div>
                    </div>

                    <div class="image-box text-center">
                        <label>Profile Picture</label>
                        <div class="image-wrapper">
                            <img id="profilePictureImage" src="~/@Model.ProfilePicture" alt="Profile Picture" />
                            <button type="button" class="btn btn-info change-picture" data-target="#profilePictureModal" data-toggle="modal">
                                <i class="fas fa-camera"></i>
                            </button>
                        </div>
                    </div>

                </div>

                <div class="form-group">
                    <label for="CurrentLocation">Current Location</label>
                    <input id="addressInput" class="form-control" placeholder="Enter your address" value="@Model.CurrentLocation" />
                    <span asp-validation-for="@Model.CurrentLocation" class="text-danger"></span>
                </div>

                <input asp-for="CurrentLocation" type="hidden" id="CurrentLocation" />
                <input asp-for="Latitude" type="hidden" id="Latitude" value="@Model.Latitude" />
                <input asp-for="Longitude" type="hidden" id="Longitude" value="@Model.Longitude" />

                <div id="map" style="height: 400px; width: 100%; margin-top: 10px;"></div>

                <div class="d-flex justify-content-center mt-5">
                    <button type="submit" class="btn btn-success w-50">Save</button>
                </div>
            </form>
        </div>


    </div>
</div>


