<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - towing_services</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <link href="~/css/site.css" rel="stylesheet" />

    <style>


        ul li {
            padding: 15px;
        }

      
        li a{
            background:transparent !important
        }

        .navbar {
            background: white;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        a:hover {
            color: #1e90ff !important
        }


  


        .bae {
            border-radius: 50%;
            padding: 5px 8px;
            background-color: red;
            color: black;
            font-weight: bold;
            position: relative;
            top: -5px;
            right: -5px;
        }

        .nav-item .nav-link {
            font-size: 20px;
            color: black;
            font-weight: bold;
            text-transform: uppercase;
            transition: all 0.3s ease; /* تأثير التحول السلس */
        }







        a {
            font-weight: 400;
            font-size: 25px !important
        }


        @@media (max-width: 480px) {

            a {
                font-weight: 400;
                font-size: 19px !important
            }
      
         
            li a :hover{
                background: none
            }
        }

        a::after {
            content: "";
            position: absolute;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, transparent, #1e90ff);
            bottom: 0;
            left: 0;
            transform: scaleX(0);
            transform-origin: bottom right;
            transition: transform 0.3s ease-out;
        }

        a:hover::after {
            transform: scaleX(1);
            transform-origin: bottom left;
        }

   
        .navbar-collapse {
            display: none;
            transition: all 0.3s;
        }

            .navbar-collapse.show {
                display: block;
            }
        /* شكل زر التبديل */
        .navbar-toggler {
            border: none;
            background: transparent;
            display: flex;
            flex-direction: column;
            gap: 5px;
            cursor: pointer;
        }

        /* الخطوط الخاصة بالزر */
        .toggler-icon {
            width: 30px;
            height: 4px;
            background-color: #333;
            transition: transform 0.3s ease, opacity 0.3s ease;
        }

        /* عند تفعيل الزر، تحوله إلى X */
        .navbar-toggler.active .toggler-icon:nth-child(1) {
            transform: translateY(9px) rotate(45deg);
        }

        .navbar-toggler.active .toggler-icon:nth-child(2) {
            transform: translateY(-4px) rotate(-45deg);
        }



        .navbar-collapse.show {
            max-height: 500px;
        }

        .navbar-toggler {
            border: none !important; /* إزالة الإطار */
            outline: none !important; /* إزالة التحديد */
            box-shadow: none !important; /* إزالة أي تأثير ظل عند النقر */
        }



        .navbar-toggler {
            position: absolute;
            right: 15px; /* تأكد من ثباته على اليمين */
            top: 25px;
        }

        .navbar-brand {
            text-align: center;
            padding-left:22px !important; /* إزالة الحشوات */
            display: flex;
            justify-content: center; /* لضمان محاذاة العناصر في المنتصف */
            align-items: center; /* لضمان محاذاة العناصر عموديًا */
            font-size: 22px !important
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-xl navbar-light">
        <div class="container-fluid">
            <h1 class="navbar-brand" asp-controller="DriverDash" asp-action="Dashboard" style="font-family: Roboto; color: #1e90ff">
                Driver Dashboard
            </h1>

            <button class="navbar-toggler" type="button" id="toggleButton" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <div class="toggler-icon"></div>
                <div class="toggler-icon"></div>
            </button>

            <!-- القائمة -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li>
                        <a class="dropdown-item" asp-controller="DriverDash" asp-action="Dashboard">Order</a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="DriverDash" asp-action="Ordercompletedsuccessfully">Order completed</a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="DriverDash" asp-action="UpdateProfile">Edit profile</a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="Home" asp-action="Logout">LOGOUT</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>






    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)


   


</body>
</html>

<script>
    function toggleMenu() {
        var menu = document.getElementById('navbarMenu');
        menu.classList.toggle('show');
    }
             document.addEventListener("DOMContentLoaded", function () {
        const toggleButton = document.getElementById("toggleButton");
        const navbarNav = document.getElementById("navbarNav");

        toggleButton.addEventListener("click", function () {
            // تبديل حالة الزر
            this.classList.toggle("active");

            // فتح أو إغلاق القائمة مع الأنيميشن
            navbarNav.classList.toggle("show");
        });
    });
</script>
