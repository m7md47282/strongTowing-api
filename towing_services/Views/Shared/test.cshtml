<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>HR Dashboard Layout</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .dashboard-layout {
            display: flex;
            height: 100vh;
            flex-direction: column;
        }

        .main-area {
            display: flex;
            flex: 1;
            overflow: hidden;
        }

        .sidebar {
            width: 250px;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
            padding: 1rem;
            overflow-y: auto;
            transition: transform 0.3s ease-in-out;
        }

        .content {
            flex: 1;
            padding: 1rem;
            overflow-y: auto;
        }

        .navbar {
            flex-shrink: 0;
        }

        /* Small screens (mobile) adjustments */
        @@media (max-width: 768px) {
            .main-area

        {
            flex-direction: column;
        }

        /* Sidebar hidden by default on small screens */
        .sidebar {
            position: fixed;
            top: 56px; /* under navbar */
            left: 0;
            height: calc(100vh - 56px);
            width: 250px;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
            padding: 1rem;
            overflow-y: auto;
            transform: translateX(-100%);
            z-index: 1040;
        }

            /* Show sidebar when active */
            .sidebar.active {
                transform: translateX(0);
                box-shadow: 2px 0 5px rgba(0,0,0,0.3);
            }

        /* Overlay for when sidebar is open */
        .overlay {
            position: fixed;
            top: 56px;
            left: 0;
            width: 100%;
            height: calc(100vh - 56px);
            background: rgba(0,0,0,0.5);
            z-index: 1030;
            display: none;
        }

            .overlay.active {
                display: block;
            }

        }

        /* زر التوغل الخاص بالـ sidebar (نقاط عمودية) */
        #sidebarToggleBtn {
            width: 40px;
            height: 40px;
            padding: 0;
            border: none;
            background: transparent;
            color: white;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* زر التوغل الخاص بالقائمة العلوية */
        .navbar-toggler {
            width: 40px;
            height: 40px;
        }
    </style>
</head>
<body>

    <div class="dashboard-layout">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">HR Dashboard</a>

                <!-- زر توغل للقائمة العلوية -->
                <button class="navbar-toggler me-2" type="button" data-bs-toggle="collapse" data-bs-target="#topNavbar" aria-controls="topNavbar" aria-expanded="false" aria-label="Toggle navigation" title="Toggle Top Navbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- زر توغل للـ sidebar الجانبي - نقاط عمودية -->
                <button class="btn btn-dark d-lg-none" type="button" id="sidebarToggleBtn" aria-label="Toggle sidebar" title="Toggle Sidebar">
                    &#8942;
                </button>

                <div class="collapse navbar-collapse" id="topNavbar">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Notifications</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Profile</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Settings</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Overlay for sidebar -->
        <div class="overlay" id="sidebarOverlay"></div>

        <!-- Main Layout -->
        <div class="main-area">
            <!-- Sidebar -->
            <div class="sidebar" id="sidebarMenu">
                <h5 class="text-secondary">Navigation</h5>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link" asp-controller="HRS" asp-action="show_driver">Register driver</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="HRS" asp-action="GetDriver">Driver</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Leave Requests</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Attendance Records</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Payroll</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Performance Reviews</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Recruitment</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Training Programs</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Reports & Analytics</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Help Center</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Logout</a></li>
                </ul>
            </div>

            <!-- Content Area -->
            <div class="content">
                <div class="container-fluid">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const sidebarToggleBtn = document.getElementById('sidebarToggleBtn');
        const sidebarMenu = document.getElementById('sidebarMenu');
        const sidebarOverlay = document.getElementById('sidebarOverlay');
        const topNavbar = document.getElementById('topNavbar');
        const bsCollapse = bootstrap.Collapse;

        // أغلق الـ Navbar عند فتح الـ Sidebar
        sidebarToggleBtn.addEventListener('click', () => {
            const navbarCollapse = new bsCollapse(topNavbar, { toggle: false });
            navbarCollapse.hide(); // أغلق الـ navbar
            sidebarMenu.classList.toggle('active');
            sidebarOverlay.classList.toggle('active');
        });

        // أغلق الـ Sidebar عند فتح الـ Navbar
        const navbarToggleBtn = document.querySelector('.navbar-toggler');
        navbarToggleBtn.addEventListener('click', () => {
            if (sidebarMenu.classList.contains('active')) {
                sidebarMenu.classList.remove('active');
                sidebarOverlay.classList.remove('active');
            }
        });

        // Close sidebar when clicking overlay
        sidebarOverlay.addEventListener('click', () => {
            sidebarMenu.classList.remove('active');
            sidebarOverlay.classList.remove('active');
        });
    </script>


</body>
</html>
