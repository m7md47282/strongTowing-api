<script>
    function redirectToOrderReq() {
        // يمكن استبدال هذا بعنوان URL المناسب
        window.location.href = '@Url.Action("Order_Req", "Home")';
    }



   $(document).ready(function () {
    $("#zipForm").submit(function (event) {
        event.preventDefault();  // منع تقديم النموذج

        var zipCode = $("input[name='zipCode']").val();  // الحصول على ZIP Code

        $.ajax({
            url: '@Url.Action("CheckOffer", "Home")',  // تحديد المسار الصحيح
            type: 'POST',
            data: { zipCode: zipCode },
            dataType: 'json',  // تحديد نوع البيانات المعادة (JSON)
            success: function (data) {
                // عرض النتيجة في العنصر المحدد
                if (data.result) {
                    $('#offerResult').html(data.result);  // تحديث محتوى العنصر
                }
            },
error: function (xhr, status, error) {
    let errorMessage;

    try {
        // حاول تقرأ رسالة الخطأ من السيرفر إن كانت JSON
        const response = JSON.parse(xhr.responseText);
        errorMessage = response.message ? "😔 Server error: " + response.message : "😔 Unknown server error!";
    } catch (e) {
        // إذا الرد مش بصيغة JSON
        errorMessage = "😔 Unexpected server error: " + error;
    }

    console.error("Full Server Response:", xhr.responseText);
    $('#offerResult').html(errorMessage);
}


        });
    });
});



</script>


