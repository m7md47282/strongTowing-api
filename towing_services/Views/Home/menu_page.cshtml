        .title-hero-container {
            margin: 0 auto;
        }
    }

    @@media (max-width: 768px) {
        .container {
            padding: 0 12px;
        }

        .title-hero {
            width: 100%;
        }

        .floating-actions {
            bottom: 20px;
            right: 10px;
        }

        .floating-btn {
            padding: 10px 20px;
            font-size: 14px;
        }
    }

    @@media (max-width: 992px) {
