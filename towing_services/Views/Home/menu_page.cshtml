        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .explore-btn {
        display: inline-flex;
        align-items: center;
        padding: 8px 16px;
        border-radius: 50px;
        font-weight: 500;
        font-size: clamp(1rem, 2vw, 1.1rem);
        transition: var(--transition);
        margin-left: auto;
        gap: 10px;
    }

    .explore-btn {
        background-color: transparent;
        border: 1px solid var(--white);
        color: var(--white);
    }

        .explore-btn:hover {
            background-color: var(--white);
