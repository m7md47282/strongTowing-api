        transition: var(--transition);
    }

        #hero-slider .splide__track .splide__arrow:hover {
            background-color: var(--primary-blue);
        }

        #hero-slider .splide__track .splide__arrow i {
            font-size: clamp(16px, 2vw, 20px);
        }

