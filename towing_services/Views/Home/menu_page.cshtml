        text-align: center;
        margin-top: 2.5rem;
        color: var(--primary-orange);
    }

        .price-tag h2 {
            font-size: clamp(2.5rem, 8vw, 5.5rem);
            margin-bottom: 0;
            line-height: 1;
            font-weight: 600;
            overflow-y: hidden;
        }

        .price-tag p {
            font-size: clamp(1.2rem, 4vw, 2rem);
        }

