@{
    ViewData["Title"] = "Password Reset Sent";
}
<style>
    body {
        background:red;
    }

    /* تنسيق القائمة المنسدلة */
    .nav-item .dropdown-menu {
        background-color: #f0f0f0; /* لون الخلفية */
        border: none;
        border-radius: 20px; /* زوايا مستديرة */
        box-shadow: 0px 8px 15px rgb(6 34 57 / 0.10); /* ظل ناعم */
        padding: 4px;
        /* إبعاد القائمة عن الحافة اليمنى */
        margin-left: -50px; /* إضافة مسافة من الحافة اليمنى */
    }


    /* عناصر القائمة المنسدلة */
    .dropdown-item {
        font-size: 18px;
        color: #333;
        padding: 10px 20px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

        /* تأثير عند المرور على عنصر القائمة المنسدلة */
        .dropdown-item:hover {
            background-color: #0b2644; /* لون الخلفية عند المرور */
            color: #fff; /* لون النص عند المرور */
            transform: scale(1.05); /* تكبير بسيط */
        }

    /* تصميم السهم */
    .nav-link.dropdown-toggle::after {
        content: ' ▼'; /* إضافة سهم */
        font-size: 12px;
        color: inherit; /* نفس لون النص */
        margin-left: 5px;
        transition: transform 0.3s ease;
    }

    /* دوران السهم عند الفتح */
    .nav-link.dropdown-toggle[aria-expanded="true"]::after {
        transform: rotate(180deg);
    }

    /* تأثير الظهور التدريجي للقائمة */
    .nav-item .dropdown-menu {
        opacity: 0;
        transform: translateY(-10px);
        transition: opacity 0.3s ease, transform 0.3s ease;
    }

        /* عند عرض القائمة */
        .nav-item .dropdown-menu.show {
            opacity: 1;
            transform: translateY(0);
        }



    .cc {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        margin: 0 auto;
        max-width: 650px;
        padding: 80px;
        text-align: center;
        transition: all 0.3s ease;
    }

        /* تأثير عند التحويم على الكارد */
        .cc:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        }

        .cc p {
            font-size: 28px;
            color: #333;
            margin: 0;
        }

        /* التأثيرات الانتقالية على النص */
        .cc p {
            animation: fadeIn 1s ease-out;
        }

   

    .wave-container {
        position: relative;
        width: 100%;
        overflow: hidden;
        text-align: center;
        background-color: #f9f9f9; /* Background color for better visibility */
    }

    .welcome-message {
        position: relative; /* موقع ثابت داخل الحاوية */
        margin-top: -98px;
        font-size: 30px;
        line-height: 1.6;
        color: black;
        text-align: center;
    }
    /* Title styling */
    .wave-title {
        position: absolute;
        top: 20%;
        width: 100%;
        font-size: 3rem;
        font-weight: bold;
        color: black;
        text-transform: uppercase;
        z-index: 1;
    }

    /* SVG styling */
    #wave {
        width: 100%;
        height: auto;
    }

    @@media (max-width: 1024px) {
        .wave-title {
            margin-top: -50px;
            font-size: 40px;
        }



        .welcome-message {
            margin-top: 20px;
            font-size: 30px;
        }
    }

    @@media (max-width: 768px) {
        .wave-title {
            margin-top: -30px;
            font-size: 25px;
        }

        .welcome-message {
            margin-top: 10px;
            font-size: 18px;
        }
    }

    @@media (max-width: 480px) {
        .wave-title {
            margin-top: -30px;
            font-size: 25px;
        }



        .welcome-message {
            margin-top: 40px;
            font-size: 18px;
        }
    }
</style>


