@section Scripts {
    <script>
        document.getElementById('searchBtn').addEventListener('click', function () {
            var zipCode = document.getElementById('zipCodeInput').value.trim();

            if (zipCode === '') {
                alert('Please enter a ZIP code');
                return;
            }

            // الحصول على قيمة الـ AntiForgeryToken
            var token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            fetch('@Url.Action("CheckOffer", "Home")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                },
                body: JSON.stringify({ zipCode: zipCode })
            })
            .then(response => response.json())
            .then(data => {
                if (data.result) {
                    document.getElementById('offerResult').textContent = data.result;
                } else if (data.error) {
                    document.getElementById('offerResult').textContent = 'Error: ' + data.message;
                }
            })
            .catch(error => {
                document.getElementById('offerResult').textContent = 'Error: ' + error;
            });
        });
    </script>
