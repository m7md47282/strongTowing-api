        padding: 12px 24px;
        border-radius: 100px;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.3s ease;
        font-size: clamp(14px, 1.5vw, 16px);
    }

        .search-btn:hover {
            background: var(--orange-hover);
        }

    .services-container {
        max-width: 1350px;
        margin: 0 auto;
        padding: 1rem;
    }

    .service-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
        padding: 2rem 0;
    }

    .service-card {
        background: #fafafa;
        padding: 32px;
        border-radius: 16px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .service-price {
        font-size: clamp(16px, 1.5vw, 18px);
        font-weight: 600;
        color: var(--dark-gray);
        margin-bottom: 16px;
        align-content: center;
    }

    .service-title {
        font-size: clamp(20px, 2vw, 24px);
        font-weight: 700;
        color: var(--dark-gray);
        margin-bottom: 12px;
    }

    .service-description {
        color: var(--dark-gray);
        opacity: 0.8;
        margin-bottom: 24px;
        line-height: 1.6;
    }

    .service-icon {
        width: 80px;
        height: 80px;
        margin-bottom: 16px;
    }

    .request-btn-container {
        display: flex;
        justify-content: flex-end;
        justify-items: center;
        padding: 0px 0.25rem;
    }

    .request-btn {
        display: inline-flex;
        align-items: center;
        padding: 12px 24px;
        background: var(--dark-gray);
        color: var(--white);
        border-radius: 100px;
        font-weight: 500;
        transition: transform 0.3s ease;
        font-size: clamp(14px, 1.5vw, 16px);
    }

        .request-btn:hover {
            transform: translateX(2px);
        }

        .request-btn i {
            margin-left: 8px;
        }

    @@media (max-width: 992px) {
        .services-hero

    {
        height: 60vh;
    }

    .service-grid {
        grid-template-columns: 1fr;
    }

    }

    @@media (max-width: 768px) {
        .hero-title

    {
        font-size: clamp(24px, 5vw, 36px);
    }

    .search-box {
        flex-direction: column;
        background: transparent;
        padding: 0;
        overflow: unset;
    }

    .services-container {
        padding: 2rem 1rem;
    }

    .service-card {
        padding: 24px;
    }

    .search-btn {
        border-radius: 0px;
    }

    }

    @@media (max-width: 768px) {
        .input-wrapper

    {
        width: 100%;
    }

    .search-input {
        padding-left: 56px;
    }

    .search-btn {
        width: 100%;
    }

    }
</style>
