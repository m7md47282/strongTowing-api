  border-radius: 4px;
  font-size: 14px;
}

.form-group textarea {
  height: 120px;
  resize: vertical;
}

.submit-btn {
  background: var(--primary-orange);
  color: var(--white);
  border: none;
  border-radius: 100px;
  padding: 12px 32px;
  font-weight: 500;
  cursor: pointer;
  width: 100%;
  transition: background-color 0.3s ease;
}

.submit-btn:hover {
  background: var(--orange-hover);
}

.contact-info {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.info-text {
  color: var(--dark-gray);
  opacity: 0.8;
  line-height: 1.6;
  margin-bottom: 8px;
}

.info-item {
  display: flex;
  align-items: flex-start;
  width: 100%;
  gap: 16px;
}

.info-item i {
  color: var(--primary-orange);
  font-size: 20px;
  margin-top: 4px;
}

.info-item-content {
  flex: 1;
}

.info-item-content h3 {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 4px;
  color: var(--dark-gray);
}

.info-item-content p,
.info-item-content a {
  color: var(--dark-gray);
  opacity: 0.8;
  font-size: 14px;
  line-height: 1.6;
  width: 100%;
}

.info-item-content a:hover {
  color: var(--primary-orange);
  opacity: 1;
}

.map-section {
  margin-top: 60px;
}
.map-title-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.map-container {
  margin: 10px;
  height: 600px;
  border-radius: 8px;
  overflow: hidden;
}

.map-container iframe {
  width: 100%;
  height: 100%;
  border: none;
}

@@media (max-width: 992px) {
  .contact-content {
